{
  "mcpServers": {
    "channelape": {
      "command": "node",
      "args": ["/path/to/channelape-mcp/dist/index.js"],
      "env": {
        "CHANNELAPE_API_TOKEN": "${CHANNELAPE_API_TOKEN}",
        "CHANNELAPE_BUSINESS_ID": "${CHANNELAPE_BUSINESS_ID}"
      }
    },
    "example-python-server": {
      "command": "python3",
      "args": ["-m", "mcp_server", "--port", "3000"],
      "cwd": "/path/to/python/project",
      "env": {
        "PYTHONPATH": "./src",
        "API_KEY": "${API_KEY}"
      }
    },
    "example-deno-server": {
      "command": "deno",
      "args": ["run", "--allow-all", "server.ts"],
      "cwd": "/path/to/deno/project"
    },
    "example-node-server": {
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "/path/to/node/project",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
