{
  "name": "mcpmon",
  "version": "0.3.0",
  "description": "Hot-reload monitor for MCP servers - like nodemon but for Model Context Protocol",
  "keywords": ["mcp", "model-context-protocol", "hot-reload", "nodemon", "development", "monitor"],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcpmon": "dist/cli.js"
  },
  "files": [
    "dist/cli.js",
    "dist/cli.d.ts",
    "dist/cli.d.ts.map",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.d.ts.map",
    "dist/proxy.js",
    "dist/proxy.d.ts",
    "dist/proxy.d.ts.map",
    "dist/interfaces.js",
    "dist/interfaces.d.ts",
    "dist/interfaces.d.ts.map",
    "dist/node/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc",
    "postbuild": "npm run make-executable",
    "clean": "rm -rf dist",
    "dev": "npm run build && node --watch dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/behavior",
    "test:integration": "jest tests/integration",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "make-executable": "chmod +x dist/cli.js 2>/dev/null || true",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "postinstall": "node scripts/postinstall.js"
  }
}
